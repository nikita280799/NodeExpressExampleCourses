<h1>Корзина</h1>
<div id="card">
    {{#if card.courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each card.courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="js-remove" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Цена:</strong><span class="price">{{card.price}}</span></p>
    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>