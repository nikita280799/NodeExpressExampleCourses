<h1>Редактировать {{course.title}}</h1>
<form action="/courses/edit" method="POST">
    <div class="input-field">
          <input type="text" id="title" name="title" class="validate" required value="{{course.title}}">
          <label for="title">Название курса</label>
          <span class="helper-text" data-error="Введите название курса"></span>
    </div>
    <div class="input-field">
          <input type="number" id="price" name="price" class="validate" required value="{{course.price}}">
          <label for="price">Цена</label>
          <span class="helper-text" data-error="Введите стоимость курса"></span>
    </div>
    <div class="input-field">
          <input type="text" id="img" name="img" class="validate" required value="{{course.img}}"> 
          <label for="img">URL картинки</label>
          <span class="helper-text" data-error="Введите URL"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn waves-effect waves-light" type="submit" name="action">Редактировать</button>
</form>